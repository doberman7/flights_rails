<div class="modal-content">
  <%= render "flight_selected"%>
  <% @flight_seats = Array.new(@flight_seleceted.total_seats) %>
  <%=select(:seats , "seats_selected", @flight_seats.each_with_index {|v,i| @flight_seats[i] = i + 1}, {include_blank: 'None'})%>
  
  <p>forma User new</p>
  <%=form_for @user, remote: true, html: { style: "display:inline;" } do |f|  %>
    <div class="modal-body">
      <ul class="errors"></ul>

      <div class="form-group">
        <%=  f.label :name, class:"control-label" %>
         <%=f.text_field :name, class: "form-control"  %>

      </div>
      <div class="form-group">
        <%=  f.label :email, class: "control-label"%>
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="modal-footer">

      <%= f.submit "Crear user",class: "btn btn-primary"%>
      <%=link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
    </div>
  <% end %>
</div>
