<h2>Vuelo seleccionado</h2>
<!-- ESTE SPAN ES UN NUMERO IMPORTANTE, NO MODIFICAR, NOA AGREGAR NADA DENTRO -->
<span id="seats">
    <%=@seats_selected%>
</span> Asientos por asignar
<%=@booking%>

<%if @flight_seleceted %>
  <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Costo</th>
          <td>&nbsp;Destiny</td>
          <td>&nbsp;Origin</td>
          <td>&nbsp;Depart</td>
          <td>&nbsp;Hour</td>
        </tr>
      </thead>
      <tbody >
          <td><%=@flight_seleceted.id%></td>
          <td><%=@flight_seleceted.cost%></td>
          <td><%=@flight_seleceted.destiny%></td>
          <td><%=@flight_seleceted.origin%></td>
          <td><%="#{@flight_seleceted.depart.day} of #{@flight_seleceted.depart.strftime('%B')} of #{@flight_seleceted.depart.year}"%></td>
          <td><%="#{@flight_seleceted.depart.hour}:#{@flight_seleceted.depart.min}"%></td>

      </tbody>
  </table>
<%end%>

<%= link_to "Add users", user_add_path,:method => :post ,remote: true, class: "btn btn-primary" %>
<%= link_to "Return to seleccion", "/", class: "btn", data: {dismiss: "modal"} %>

<div id="user-modal" class="modal fade"</div>
